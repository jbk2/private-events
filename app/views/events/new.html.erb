<%= field_set_tag "Create new event" do %>
	<%= form_with model: @event, class: "block" do |f| %>
		<%= f.label :date, "Event Date" %>
		<%= f.date_field :date, class: "mb-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded" %>
		<%= f.label :location, "Event location" %>
		<%= f.text_field :location, class: "mb-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded" %>
		<%= f.submit class:"btn-md" %>
	<% end %>
<% end %>
  